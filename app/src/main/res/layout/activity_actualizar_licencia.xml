<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="una.ac.cr.licenciasfacil.Activities.ActualizarLicencia">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="25dp"
                android:id="@+id/lblLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar Licencia" />

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/imageViews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/wings" />

            <EditText
                android:id="@+id/txtNombreLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Nombre"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtVersionLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Versión"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtTipoLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Tipo"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtDescripcionLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Descripción"
                android:height="150dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtSoftwareLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#2c3e50"
                android:hint="Software Utiliza" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnCargarImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECCIONAR IMAGEN"
                android:textColor="#fff"
                android:background="#2ecc71"
                android:onClick="ActualizarImagen"/>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actualizar"
                android:textColor="#fff"
                android:background="#2ecc71"

                android:onClick="Actualizar"/>


        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
