<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    tools:context="una.ac.cr.licenciasfacil.Activities.InsertarLicencia">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelRegistrarLicencia"
                android:drawableTop="@drawable/wingx"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Insertar Licencia"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#2c3e50"/>

            <EditText
                android:id="@+id/txtNombreLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Nombre"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtVersionLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Versión"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtTipoLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Tipo"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtDescripcionLicencia"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Descripción"
                android:height="150dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/txtSoftwareLicencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#2c3e50"
                android:hint="Software Utiliza" />

            <Button
                android:id="@+id/button"
                android:layout_width="323dp"
                android:layout_height="wrap_content"
                android:text="Insertar"
                android:textColor="#2ecc71"
                android:background="#ffff"
                android:layout_marginTop="15dp"
                android:onClick="Insertar"/>

        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>
