<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/imagenUser"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/man"/>

    <TextView
        android:id="@+id/txtUsuarioAD"
        android:layout_width="133dp"
        android:layout_height="27dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="12dp"
        android:hint="Usuario"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imagenUser"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTipoUsuarioAD"
        android:layout_width="119dp"
        android:layout_height="25dp"
        android:hint="Tipo"
        android:textSize="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toRightOf="@+id/editText2"
        android:layout_marginLeft="17dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuarioAD" />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="139dp"
        android:layout_height="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Tipo de Usuario:"
        android:textSize="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUsuarioAD"
        android:layout_marginLeft="74dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>